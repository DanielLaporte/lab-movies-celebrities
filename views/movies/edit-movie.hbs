<html>
<head>
    <title>Edit Movie</title>
</head>
<body>
    <h1>Edit Movie</h1>
    <form action="/movies/{{movie._id}}/edit" method="POST">
        <label>Title:</label>
        <input type="text" name="title" value="{{movie.title}}" required>
        
        <label>Genre:</label>
        <input type="text" name="genre" value="{{movie.genre}}" required>
        
        <label>Plot:</label>
        <textarea name="plot" required>{{movie.plot}}</textarea>
        
        <label>Cast:</label>
        <select name="cast" multiple>
            {{#each celebrities}}
                <option value="{{this._id}}" {{#if isInCast this._id movie.cast}}selected{{/if}}>{{this.name}}</option>
            {{/each}}
        </select>

        <button type="submit">Update Movie</button>
    </form>
    <a href="/movies/{{movie._id}}">Cancel</a>
</body>
</html>